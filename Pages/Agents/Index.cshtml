@page
@model RealEstatePMP.Pages.Agents.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Agents</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].YearsOfExperience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].SalesOffice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Agent) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsOfExperience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesOffice.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AgentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AgentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AgentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

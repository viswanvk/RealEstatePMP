@page
@model RealEstatePMP.Pages.SalesOffices.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Sales offices</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].EstablishmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SalesOffice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstablishmentDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SalesOfficeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SalesOfficeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SalesOfficeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

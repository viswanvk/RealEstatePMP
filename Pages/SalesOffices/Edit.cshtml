@page
@model RealEstatePMP.Pages.SalesOffices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit sales office</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalesOffice.SalesOfficeId" />
            <div class="form-group">
                <label asp-for="SalesOffice.Name" class="control-label"></label>
                <input asp-for="SalesOffice.Name" class="form-control" />
                <span asp-validation-for="SalesOffice.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesOffice.Address" class="control-label"></label>
                <textarea asp-for="SalesOffice.Address" class="form-control"></textarea>
                <span asp-validation-for="SalesOffice.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesOffice.EstablishmentDate" class="control-label"></label>
                <input asp-for="SalesOffice.EstablishmentDate" class="form-control" />
                <span asp-validation-for="SalesOffice.EstablishmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
